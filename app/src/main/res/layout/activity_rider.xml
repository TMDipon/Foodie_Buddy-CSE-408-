<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/userlogin"
    tools:context=".rider">

    <EditText
        android:id="@+id/riderpassword"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="80dp"
        android:ems="10"
        android:hint="Enter password:"
        android:inputType="textPassword"
        android:padding="10dp" />

    <EditText
        android:id="@+id/rideremail"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="140dp"
        android:ems="10"
        android:hint="Enter email address:"
        android:inputType="textEmailAddress"
        android:padding="10dp" />

    <EditText
        android:id="@+id/riderphone"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="200dp"
        android:ems="10"
        android:hint="Enter Phone Number:"
        android:inputType="phone"
        android:padding="10dp" />

    <EditText
        android:id="@+id/ridername"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Enter Rider Name:"
        android:inputType="textPersonName"
        android:padding="10dp" />

    <EditText
        android:id="@+id/ridernid"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="260dp"
        android:ems="10"
        android:hint="Enter NID Number:"
        android:inputType="number"
        android:padding="10dp" />

    <Button
        android:id="@+id/riderreg"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="500dp"
        android:background="#062A46"
        android:onClick="riderRegister"
        android:padding="10dp"
        android:text="Register"
        android:textColor="@android:color/background_light"
        android:textSize="13sp" />

    <Spinner
        android:id="@+id/rdistrict"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="380dp" />

    <Spinner
        android:id="@+id/rarea"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="380dp" />
</RelativeLayout>