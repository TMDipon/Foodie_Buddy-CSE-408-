<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#edeeed"
    android:orientation="vertical">

    <TextView
        android:id="@+id/cpfoodName"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="8dp"
        android:textColor="#000002"
        android:textSize="18sp"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/cpfoodDesc"
        android:layout_width="380dp"
        android:layout_height="70dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="60dp"
        android:textColor="@android:color/background_dark"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/cpCurPrice"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="130dp"
        android:paddingLeft="6dp"
        android:paddingTop="1dp"
        android:text="Current Price: "
        android:textColor="@android:color/background_dark"
        android:textSize="19sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/cpfoodPrice"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="130dp"
        android:paddingLeft="6dp"
        android:paddingTop="1dp"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/changefoodprice"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="135dp"
        android:layout_marginTop="180dp"
        android:background="#436772"
        android:text="Change Price"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:textStyle="normal|bold" />

</RelativeLayout>
