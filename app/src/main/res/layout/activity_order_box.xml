<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".orderBox">

    <TextView
        android:id="@+id/odrRest"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#555445"
        android:paddingLeft="50dp"
        android:paddingTop="25dp"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/odrLabel"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="95dp"
        android:paddingLeft="140sp"
        android:paddingTop="20sp"
        android:text="Order Description"
        android:textSize="18sp" />

    <ListView
        android:id="@+id/odramlist"
        android:layout_width="70dp"
        android:layout_height="200dp"
        android:layout_marginTop="155dp"
        android:dividerHeight="5dp" />

    <ListView
        android:id="@+id/odrfoodlist"
        android:layout_width="240dp"
        android:layout_height="200dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="155dp"
        android:dividerHeight="5dp" />

    <ListView
        android:id="@+id/odrpricelist"
        android:layout_width="100dp"
        android:layout_height="200dp"
        android:layout_marginLeft="310dp"
        android:layout_marginTop="155dp"
        android:dividerHeight="5dp" />

    <TextView
        android:id="@+id/odrst"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="360dp"
        android:paddingLeft="20sp"
        android:paddingTop="15sp"
        android:text="Subtotal"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/odrstval"
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:layout_marginTop="360dp"
        android:layout_marginLeft="200dp"
        android:paddingLeft="80sp"
        android:paddingTop="15sp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/odrtax"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="410dp"
        android:paddingLeft="20sp"
        android:paddingTop="15sp"
        android:text="Tax"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/odrtaxval"
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:layout_marginTop="410dp"
        android:layout_marginLeft="200dp"
        android:paddingLeft="80sp"
        android:paddingTop="15sp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/odrdfee"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="460dp"
        android:paddingLeft="20sp"
        android:paddingTop="15sp"
        android:text="Delivery fee"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/odrdfeeval"
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:layout_marginTop="460dp"
        android:layout_marginLeft="200dp"
        android:paddingLeft="80sp"
        android:paddingTop="15sp"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/odrtotal"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="520dp"
        android:paddingLeft="20sp"
        android:paddingTop="15sp"
        android:background="#ffefff"
        android:text="Total"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/odrtotalval"
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:layout_marginTop="520dp"
        android:layout_marginLeft="200dp"
        android:paddingLeft="80sp"
        android:paddingTop="15sp"
        android:background="#ffefff"
        android:textSize="18sp" />

    <Button
        android:id="@+id/confodr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="580dp"
        android:text="Confirm Order"
        android:textSize="20sp"
        android:textStyle="bold" />
</RelativeLayout>